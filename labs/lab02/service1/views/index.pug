extends layout

block content
  if view === "addPacient"
    .container
      .text-center
        h2 Add Pacient

        form
        .form-group
          label(for='exampleInput1') Pacient Number
          input#exampleInput1.form-control(type='text' aria-describedby='name')
        .form-group
          label(for='exampleInput2') Pacient Name
          input#exampleInput2.form-control(type='text' aria-describedby='name')
        .form-group
          label(for='exampleInput3') Pacient Address
          input#exampleInput3.form-control(type='text' aria-describedby='name')
        .form-group
          label(for='exampleInput4') Pacient Phone Number
          input#exampleInput4.form-control(type='text' aria-describedby='name')
        
        button.btn.btn-primary(type='submit') Add Pacient

  
  else if view === "filter"
    .container
      .text-center
        h2 Filter By Day

        form
        .form-group
          label(for='exampleInput5') Exam Date
          input#exampleInput5.form-control(type='date' name='exam_date')     
        button.btn.btn-primary(type='submit') Search
        p
        table.table
          thead
            tr
            th(scope='col') #
            th(scope='col') Name
            th(scope='col') Date
            th(scope='col') Hour
            th(scope='col') Address
            th(scope='col') Number
            th(scope='col') Episode Number
            th(scope='col') Status
            th(scope='col') Report
          tbody
            tr
              th(scope='row') 1
              td otoo
              td Otto
              td @mdo
              td otoo
              td Otto
              td @mdo          
              td Otto
              td @mdo
         
  else if view === "addRequest"
    .container
      .text-center
        h2 Add Request
        form(action="/addRequest" method="post")
          .form-group
            label(for='patient') Pacient
            select#patient(class="custom-select" name="patient_id" required) 
              option(selected disabled value="") Choose patient
              each patient in data
                option(value=`${patient.id};${patient.number}`)= `${patient.number} - ${patient.name}`
          .form-group
            label(for='date') Exam Date
            input#date.form-control(type='date' name='date' required)
          .form-group
            label(for='hour') Exam Hour
            input#hour.form-control(type='time' name='hour' required)
          .form-group
            label(for='episodeNumber') Episode Number
            input#episodeNumber.form-control(type='number' aria-describedby='name' name="episode_number" required)
          .form-group
            label(for='info') Additional Clinical Info
            textarea#info.form-control(rows='3' name="info")
          button.btn.btn-primary(type='submit') Add Request

  else if view === "listExams"
   .container-float
      .text-center
        h2 Exam Requests
      table.table
        thead
          tr
          th(scope='col') Request number
          th(scope='col') Patient Name
          th(scope='col') Exam Date
          th(scope='col') Exam Hour
          th(scope='col') Patient Number
          th(scope='col') Patient Address
          th(scope='col') Patient Phone Number
          th(scope='col') Episode Number
          th(scope='col') Exam Status
          th(scope='col') Exam Report
        tbody
          each entry in data
            tr
              th= entry.number
              td= entry.patient_name
              td= entry.date.toISOString().split('T')[0]
              td= entry.hour
              td= entry.patient_number
              td= entry.patient_address
              td= entry.patient_phone_number          
              td= entry.episode_number
              td= entry.status
              td= entry.report